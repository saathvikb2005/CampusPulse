{
  "name": "campuspulse-backend",
  "version": "1.0.0",
  "description": "Backend API for CampusPulse - A comprehensive campus management system built with Node.js, Express.js, and MongoDB",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:prod": "cross-env NODE_ENV=production node src/app.js",
    "dev": "cross-env NODE_ENV=development nodemon src/app.js",
    "dev:debug": "cross-env NODE_ENV=development nodemon --inspect src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'No build step required for Node.js'"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "campus",
    "management",
    "events",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "CampusPulse Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jsqr": "^1.4.0",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.8",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.1",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
