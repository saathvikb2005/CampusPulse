# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Use MongoDB Atlas for production)
MONGODB_URI=mongodb://localhost:27017/campuspulse
DB_NAME=campuspulse

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for notifications and verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@campuspulse.edu

# Client Configuration (Update with your Vercel URL in production)
CLIENT_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Update with your Vercel URL in production)
CORS_ORIGIN=http://localhost:5173

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173